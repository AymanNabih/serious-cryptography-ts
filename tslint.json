{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "prefer-for-of": true,
        "no-bitwise": false,
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "member-variable-declaration",
            "array-destructuring"
        ],
        "interface-name": [
            false
        ],
        "unified-signatures": false,
        "no-console": [
            false
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            ".out/**",
            ".coverage/**"
        ]
    }
}