{
    "compilerOptions": {
        "sourceMap": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs",
        "target": "es6",
        "types" : [
            "node",
            "jest"
        ],
        "baseUrl": ".",
        "outDir": ".out"
    },
    "exclude": [
        ".out",
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
    ]
}